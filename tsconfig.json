{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,

		// leave the following to eslint
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"allowUnreachableCode": true
	},
	"exclude": ["**/node_modules"],
	"include": ["./src", "./scripts", "./*.ts", "./*.js", "./*.*.cjs"]
}
