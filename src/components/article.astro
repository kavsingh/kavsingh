---
import Content from "./content.astro";

export interface Props {
	web: boolean;
	print: boolean;
}

const { web, print } = Astro.props as Props;
---

<article data-hide-web={!web} data-hide-print={!print}>
	<h3><slot name="title" /></h3>
	<h4><slot name="meta" /></h4>
	<Content><slot /></Content>
</article>

<style>
	h3 {
		margin-block: 0 0.2em;
		font-size: 1.1em;
		color: var(--color-text-600);
	}

	h4 {
		margin-block: 0 0.8em;
		font-size: 0.88em;
		color: var(--color-text-300);
		font-weight: 400;
	}

	@media screen {
		[data-hide-web] {
			display: none;
		}
	}

	@media print {
		[data-hide-print] {
			display: none;
		}
	}
</style>
