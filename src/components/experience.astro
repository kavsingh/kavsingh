---
import Article from "./article.astro";

import type { CollectionEntry } from "astro:content";

export type Props = { entry: CollectionEntry<"experience"> };

const { entry } = Astro.props;
const { position, employer, period, location, web, print } = entry.data;
const { Content } = await entry.render();
---

<Article web={web} print={print}>
	<span slot="title">{position}</span>
	<span slot="subtitle">{employer}</span>
	<span slot="meta">{period}, {location}</span>
	<Content />
</Article>
