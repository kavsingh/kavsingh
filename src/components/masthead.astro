---
import aboutContent from '../content/about';
import Panels from '../layouts/panels.astro';

const { links, name, profession } = aboutContent;
const printLinks = links.filter(({ print }) => print)
const webLinks = links.filter(({ web }) => web)
---
<header>
	<Panels>
		<h1 slot="left">{name}</h1>
		<h2 slot="right">{profession}</h2>
		<ul slot="right">
			{webLinks.map(({ url, label }) => (
				<li class="masthead_web-link">
					<a href={url}>{label}</a>
				</li>
			))}
			{printLinks.map(({ url, label }) => (
				<li class="masthead_print-link">
					<a href={url}>
						<strong>{label}</strong> {url.replace(/(^\w+:|^)\/\//, '')}
					</a>
				</li>
			))}
		</ul>
	</Panels>
</header>

<style>
	header {
		margin-bottom: var(--spacing-2);
	}

	h1, h2 {
		margin: 0 0 0.6em;
		padding: 0;
	}

	h1 {
		color: var(--color-text-600);
		font-weight: 600;
		font-size: 1.4em;
	}

	h2 {
		color: var(--color-text-300);
		font-weight: 400;
		font-size: 1.2em;
	}

	ul {
		display: flex;
		margin: 0;
		padding: 0;
		list-style-type: none;
	}

	ul a {
		color: currentColor;
	}

	.masthead_web-link {
		margin-right: 1.2em;
	}

	.masthead_print-link a {
		text-decoration: none;
	}

	.masthead_print-link a strong {
		display: inline-block;
		margin-right: 0.2em;
		font-weight: 500,
	}

	@media screen and (min-width: 36rem) {
		header {
			margin-bottom: var(--spacing-3);
		}
	}

	@media screen {
		.masthead_print-link {
			display: none;
		}
	}

	@media print {
		ul {
			flex-direction: column;
		}

		.masthead_web-link {
			display: none;
		}
	}
</style>
