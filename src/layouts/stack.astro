---
export interface Props {
	gap?: 1 | 2 | 3;
	slot?: string;
}

const { gap = 2 } = Astro.props as Props;
---

<div class={`stack--${gap}`}>
	<slot />
</div>

<style>
	div {
		display: flex;
		flex-direction: column;
		align-items: stretch;
	}

	.stack--1 {
		gap: var(--spacing-1);
	}

	.stack--2 {
		gap: var(--spacing-2);
	}

	.stack--3 {
		gap: var(--spacing-2);
	}


	@media screen and (min-width: 36rem) {
		.stack--3 {
			gap: var(--spacing-3);
		}
	}

	@media print {
		.stack--3 {
			gap: var(--spacing-3);
		}
	}
</style>
